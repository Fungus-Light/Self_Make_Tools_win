<Window x:Class="HostsEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HostsEditor"
        mc:Ignorable="d"
        Title="HostsEditor" Height="350" Width="650">
    <Grid Background="#FFF3DBF2">
        <Button x:Name="loadBtn" Content="Load" HorizontalAlignment="Left" Height="40" Margin="20,20,0,0" VerticalAlignment="Top" Width="130" Background="#FFA1DEED" Click="loadBtn_Click"/>
        <Button x:Name="helpBtn" Content="?" HorizontalAlignment="Left" Height="20" Margin="200,20,0,0" VerticalAlignment="Top" Width="20" Background="#FFEAABE8" FontWeight="Bold" Click="helpBtn_Click"/>
        <Button x:Name="saveBtn" Content="Save" HorizontalAlignment="Left" Height="40" Margin="20,80,0,0" VerticalAlignment="Top" Width="130" Background="#FF4DEB77" Click="saveBtn_Click"/>
        <Button x:Name="enableBtn" Content="Enable Edit" HorizontalAlignment="Left" Height="40" Margin="20,140,0,0" VerticalAlignment="Top" Width="130" Background="#FFD6DC5B" Click="enableBtn_Click"/>
        <TextBox x:Name="HContent" Margin="250,20,20,20" Text="Click Load Buttom to Load The Hosts Message." Background="White" IsEnabled="False" AcceptsTab="True" AcceptsReturn="True" TextWrapping="Wrap"/>
    </Grid>
</Window>
